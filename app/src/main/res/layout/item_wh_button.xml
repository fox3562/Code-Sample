<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/box_grey_selector"
    android:padding="@dimen/box_padding">

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.flatstack.sample.ui.views.IconTextView
        android:id="@+id/itemWhButtonIconText"
        style="@style/FSTheme.TextTitle"
        android:text="@string/icon_sort"
        android:textSize="@dimen/text_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemWhButtonTitleText"
        style="@style/FSTheme.TextTitle"
        android:layout_marginStart="@dimen/item_margin"
        android:layout_marginEnd="@dimen/item_margin"
        android:text="@string/app_sample_text"
        app:layout_constraintBottom_toTopOf="@id/itemWhButtonLeftText"
        app:layout_constraintEnd_toStartOf="@id/itemWhButtonTopText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/itemWhButtonIconText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemWhButtonLeftText"
        style="@style/FSTheme.Text"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/app_sample_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemWhButtonRightText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/itemWhButtonTitleText"
        app:layout_constraintTop_toBottomOf="@id/itemWhButtonTitleText"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/itemWhButtonTopText"
        style="@style/FSTheme.Text"
        android:text="@string/app_sample_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemWhButtonTitleText" />

    <TextView
        android:id="@+id/itemWhButtonRightText"
        style="@style/FSTheme.Text"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/app_sample_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/itemWhButtonTopText"
        app:layout_constraintTop_toBottomOf="@id/itemWhButtonTopText"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>