<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/item_margin">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemFileImage"
        style="@style/FSTheme.Image"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/FSTheme.Image" />

    <ru.flatstack.sample.ui.views.IconButton
        android:id="@+id/itemFileButton"
        style="@style/FSTheme.ButtonDanger"
        android:text="@string/icon_flowers"
        app:layout_constraintBottom_toBottomOf="@id/itemFileImage"
        app:layout_constraintEnd_toEndOf="@id/itemFileImage" />

    <ru.flatstack.sample.ui.views.IconTextView
        android:id="@+id/itemFileIconText"
        style="@style/FSTheme.TextTitle"
        android:text="@string/icon_video"
        android:textColor="@color/fsWhite"
        android:textSize="@dimen/text_icon_size"
        app:layout_constraintBottom_toTopOf="@id/itemFileButton"
        app:layout_constraintEnd_toStartOf="@id/itemFileButton"
        app:layout_constraintStart_toStartOf="@id/itemFileImage"
        app:layout_constraintTop_toTopOf="@id/itemFileImage" />

</androidx.constraintlayout.widget.ConstraintLayout>