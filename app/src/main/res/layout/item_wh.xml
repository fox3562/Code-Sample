<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_margin"
    android:background="@drawable/box_grey_selector"
    android:padding="@dimen/box_padding">

    <TextView
        android:id="@+id/itemWhOwnerText"
        style="@style/FSTheme.TextTitle"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/item_margin"
        android:text="@string/app_sample_long_text"
        app:layout_constraintEnd_toStartOf="@id/itemWhBadgeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemWhBadgeText"
        style="@style/FSTheme.TextBadgeSuccess"
        android:text="@string/app_sample_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemWhOwnerText" />

    <TextView
        android:id="@+id/itemWhAddressText"
        style="@style/FSTheme.Text"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginEnd="@dimen/item_margin"
        android:text="@string/app_sample_long_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemWhDateText"
        app:layout_constraintStart_toStartOf="@id/itemWhOwnerText"
        app:layout_constraintTop_toBottomOf="@id/itemWhOwnerText" />

    <TextView
        android:id="@+id/itemWhDateText"
        style="@style/FSTheme.Text"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/app_sample_text"
        app:layout_constraintBottom_toBottomOf="@id/itemWhAddressText"
        app:layout_constraintEnd_toEndOf="@id/itemWhBadgeText" />

</androidx.constraintlayout.widget.ConstraintLayout>